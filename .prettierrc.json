{
  "$schema": "http://json.schemastore.org/prettierrc",
  "printWidth": 120,
  "singleQuote": true,
  "trailingComma": "es5",
  "quoteProps": "as-needed",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 70,
        "useTabs": false,
        "trailingComma": "none",
        "proseWrap": "never"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "printWidth": 120,
        "singleQuote": false,
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": true
      }
    },
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html"
      }
    }
  ]
}
